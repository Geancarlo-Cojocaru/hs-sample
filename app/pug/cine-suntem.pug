- var titlu = 'Cine suntem';

include article/_person.pug
include article/__data-persons.pug
include _elements/_abonare-newsletter.pug
include _elements/_subjects.pug


//- HTML
//-=========================================================================
doctype html
html
	include _elements/_head.pug
	body

		// navigation 
		include navigation/_main-menu.pug

		.container-fluid

			// SUBIECTE
			.container-subiecte
				+subjects([{tagValue: 'cine suntem'}])
			
			// CONȚINUT 
			.row.full-spacing
				.col-md-8.col-lg-6
					h1.h2.full-spacing-bottom Cine suntem
