					a.btn.btn-lg.btn-primary.mt-4.mb-2(href="#") Contactează-ne


			// LISTING PERSOANE MARI 
			.half-spacing-bottom
				.row.persons-big.elem-2.elem-md-3.elem-lg-6
					+personList(bigPersons)


			// LISTING PERSOANE
			.border-top.half-spacing
				.row.elem-2.elem-sm-3.elem-md-4.elem-lg-6
					+personList(persons)


			// ABONARE NEWSLETTER 
			+abonareNewsletter(class='border-top')

		//- FOOTER
		include _elements/_footer.pug