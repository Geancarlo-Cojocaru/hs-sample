h1.cheatsheet Tables
.row


	.col-xl-6
		p.cheatsheet simple table (.table)

		// simple table 
		table.table
			thead
				tr
					th(scope="col") #
					th(scope="col") First Name
					th(scope="col") Last Name
			tbody
				tr
					th(scope="row") 1
					td Mark
					td Otto
				tr
